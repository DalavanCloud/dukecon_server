{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "DukeCon Meta Schema",
  "javaType": "org.dukecon.server.api.model.MetaData",
  "type": "object",
  "properties": {
    "conference": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "tracks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/property_bag"
      }
    },
    "levels": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/property_bag"
      }
    },
    "types": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/property_bag"
      }
    }
  },
  "definitions": {
    "property_bag": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "values": {
          "$ref": "#/definitions/props"
        }
      }
    },
    "props": {
      "type": "object",
      "properties": {
        "de": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    }
  }
}
