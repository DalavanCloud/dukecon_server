{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "DukeCon Talks Schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/talk"
  },
  "definitions": {
    "talk": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "track": {
          "type": "string"
        },
        "level": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "start": {
          "type": "string",
          "format": "datetime"
        },
        "end": {
          "type": "string",
          "format": "datetime"
        },
        "location": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "speakers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/speaker"
          }
        },
        "abstract": {
          "type": "string"
        },
        "language": {
          "type": "string",
          "enum": ["de", "en"]
        },
        "demo": {
          "type": "boolean"
        }
      }
    },
    "speaker": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "company": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "website": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        },
        "gplus": {
          "type": "string"
        },
        "bio": {
          "type": "string"
        },
        "defaultSpeaker": {
          "type": "boolean"
        }
      }
    }
  }
}
